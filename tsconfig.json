{
  "include": [
    "src",
    "public/auth-success.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES5", "ES6", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "skipLibCheck": true
  }
}
